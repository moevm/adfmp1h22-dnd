<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_place"
    android:name="com.dwards.a5edpockethelper.CharacterScreen"
    android:background="#272727"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterSkills">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/StrengthLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/stat_block_height"
        android:layout_marginStart="10dp"
        android:background="@drawable/back_10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/WisdomLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/StrengthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Strength"
            android:textColor="#000000"
            android:textSize="@dimen/stat_name_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/StrengthModifier"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/StrengthModifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="@dimen/stat_name_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/StrengthText"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/WisdomLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/stat_block_height"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/back_10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/StrengthLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/WisdomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Wisdom"
            android:textColor="#000000"
            android:textSize="@dimen/stat_name_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/WisdomModifier"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/WisdomModifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="@dimen/stat_name_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/WisdomText"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
