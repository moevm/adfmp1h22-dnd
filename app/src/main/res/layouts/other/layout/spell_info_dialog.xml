<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_place"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_marginTop="200dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/spellNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/levelTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/levelText"
            app:layout_constraintStart_toEndOf="@+id/levelText"
            app:layout_constraintTop_toTopOf="@+id/levelText"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/levelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:text="Level:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spellNameText" />

        <TextView
            android:id="@+id/schoolText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="School:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelText" />

        <TextView
            android:id="@+id/schoolTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/schoolText"
            app:layout_constraintStart_toEndOf="@+id/schoolText"
            app:layout_constraintTop_toTopOf="@+id/schoolText"
            app:layout_constraintVertical_bias="0.57" />

        <TextView
            android:id="@+id/castingTimeTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/castingTimeText"
            app:layout_constraintStart_toEndOf="@+id/castingTimeText"
            app:layout_constraintTop_toTopOf="@+id/castingTimeText"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/castingTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="Casting time:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schoolText" />

        <TextView
            android:id="@+id/rangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="Range:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/castingTimeText" />

        <TextView
            android:id="@+id/rangeTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/rangeText"
            app:layout_constraintStart_toEndOf="@+id/rangeText"
            app:layout_constraintTop_toTopOf="@+id/rangeText"
            app:layout_constraintVertical_bias="0.57" />

        <TextView
            android:id="@+id/materialsTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/materialsText"
            app:layout_constraintStart_toEndOf="@+id/materialsText"
            app:layout_constraintTop_toTopOf="@+id/materialsText"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/materialsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="Materials:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rangeText" />

        <TextView
            android:id="@+id/componentsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="Components:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialsText" />

        <TextView
            android:id="@+id/componentsTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/componentsText"
            app:layout_constraintStart_toEndOf="@+id/componentsText"
            app:layout_constraintTop_toTopOf="@+id/componentsText"
            app:layout_constraintVertical_bias="0.57" />

        <TextView
            android:id="@+id/durationTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/durationText"
            app:layout_constraintStart_toEndOf="@+id/durationText"
            app:layout_constraintTop_toTopOf="@+id/durationText"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="Duration:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/componentsText" />

        <TextView
            android:id="@+id/ritualText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="Ritual:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/durationText" />

        <TextView
            android:id="@+id/sourceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="Source:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ritualText" />

        <TextView
            android:id="@+id/spellDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:text="Description:"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sourceText" />

        <TextView
            android:id="@+id/ritualTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/ritualText"
            app:layout_constraintStart_toEndOf="@+id/ritualText"
            app:layout_constraintTop_toTopOf="@+id/ritualText"
            app:layout_constraintVertical_bias="0.57" />


        <TextView
            android:id="@+id/sourceTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/sourceText"
            app:layout_constraintStart_toEndOf="@+id/sourceText"
            app:layout_constraintTop_toTopOf="@+id/sourceText" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_gray"
            app:layout_constraintBottom_toTopOf="@+id/CloseButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/CloseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spellDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>