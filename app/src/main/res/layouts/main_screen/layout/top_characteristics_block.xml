<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/InitiativeLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/InitSpeedProf_block_height"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/back_10dp"
        android:backgroundTint="#e8e8e8"
        android:foreground="@drawable/corner_10_w2dp"
        android:foregroundTint="#30A905"
        app:layout_constraintEnd_toStartOf="@+id/ProficiencyLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/InitiativeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initiative"
            android:textColor="@color/black"
            android:textSize="@dimen/SpdInitProf_number_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/InitiativeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/SpeedInit_number_size"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ProficiencyLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/InitSpeedProf_block_height"
        android:layout_marginTop="3dp"
        android:background="@drawable/back_10dp"
        android:backgroundTint="#e8e8e8"
        android:foreground="@drawable/corner_10_w2dp"
        android:foregroundTint="#7e2d85"
        app:layout_constraintEnd_toStartOf="@+id/SpeedLayout"
        app:layout_constraintStart_toEndOf="@+id/InitiativeLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ProficiencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/proficiency"
            android:textColor="@color/black"
            android:textSize="@dimen/SpdInitProf_number_size"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ProficiencyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/Prof_number_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="+2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SpeedLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/InitSpeedProf_block_height"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/back_10dp"
        android:backgroundTint="#e8e8e8"
        android:foreground="@drawable/corner_10_w2dp"
        android:foregroundTint="#30A905"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ProficiencyLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/SpeedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/speed"
            android:textColor="@color/black"
            android:textSize="@dimen/SpdInitProf_number_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/SpeedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/SpeedInit_number_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="30" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>